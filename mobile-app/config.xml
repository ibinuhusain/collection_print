<?xml version='1.0' encoding='utf-8'?>
<widget id="com.apparels.collection" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Apparels Collection</name>
    <description>A mobile app for tracking daily collections by agents for a large supplier.</description>
    <author email="dev@apparels.com" href="http://apparels.com/">Apparels Development Team</author>
    
    <content src="index.html" />
    
    <access origin="*" />
    <allow-navigation href="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="../images/icon-36x36.png" />
        <icon density="mdpi" src="../images/icon-48x48.png" />
        <icon density="hdpi" src="../images/icon-72x72.png" />
        <icon density="xhdpi" src="../images/icon-96x96.png" />
        <icon density="xxhdpi" src="../images/icon-144x144.png" />
        <icon density="xxxhdpi" src="../images/icon-192x192.png" />
        <splash density="land-ldpi" src="../images/splash-landscape-320x200.png" />
        <splash density="land-mdpi" src="../images/splash-landscape-480x320.png" />
        <splash density="land-hdpi" src="../images/splash-landscape-800x480.png" />
        <splash density="land-xhdpi" src="../images/splash-landscape-1280x720.png" />
        <splash density="port-ldpi" src="../images/splash-portrait-200x320.png" />
        <splash density="port-mdpi" src="../images/splash-portrait-320x480.png" />
        <splash density="port-hdpi" src="../images/splash-portrait-480x800.png" />
        <splash density="port-xhdpi" src="../images/splash-portrait-720x1280.png" />
    </platform>
    
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon height="57" src="../images/icon-57x57.png" width="57" />
        <icon height="114" src="../images/icon-114x114.png" width="114" />
        <icon height="40" src="../images/icon-40x40.png" width="40" />
        <icon height="80" src="../images/icon-80x80.png" width="80" />
        <icon height="50" src="../images/icon-50x50.png" width="50" />
        <icon height="100" src="../images/icon-100x100.png" width="100" />
        <icon height="60" src="../images/icon-60x60.png" width="60" />
        <icon height="120" src="../images/icon-120x120.png" width="120" />
        <icon height="180" src="../images/icon-180x180.png" width="180" />
        <icon height="72" src="../images/icon-72x72.png" width="72" />
        <icon height="144" src="../images/icon-144x144.png" width="144" />
        <icon height="76" src="../images/icon-76x76.png" width="76" />
        <icon height="152" src="../images/icon-152x152.png" width="152" />
        <icon height="29" src="../images/icon-29x29.png" width="29" />
        <icon height="58" src="../images/icon-58x58.png" width="58" />
        <icon height="87" src="../images/icon-87x87.png" width="87" />
        <icon height="120" src="../images/icon-120x120.png" width="120" />
        <icon height="180" src="../images/icon-180x180.png" width="180" />
        <splash height="1136" src="../images/splash-iphone-568h-2x.png" width="640" />
        <splash height="1334" src="../images/splash-iphone-667h.png" width="750" />
        <splash height="2208" src="../images/splash-iphone-736h-3x.png" width="1242" />
        <splash height="1242" src="../images/splash-iphone-736w-3x.png" width="2208" />
        <splash height="1536" src="../images/splash-ipad-1536x2048.png" width="2048" />
        <splash height="2048" src="../images/splash-ipad-2048x1536.png" width="1536" />
        <splash height="768" src="../images/splash-ipad-768x1024.png" width="1024" />
        <splash height="1024" src="../images/splash-ipad-1024x768.png" width="768" />
    </platform>
    
    <preference name="Fullscreen" value="false" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="BackupWebStorage" value="none" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="FadeSplashScreenDuration" value="300" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="SplashScreenBackgroundColor" value="#1976d2" />
    
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-inappbrowser" spec="^3.2.0" />
    <plugin name="cordova-plugin-network-information" spec="^2.0.2" />
</widget>